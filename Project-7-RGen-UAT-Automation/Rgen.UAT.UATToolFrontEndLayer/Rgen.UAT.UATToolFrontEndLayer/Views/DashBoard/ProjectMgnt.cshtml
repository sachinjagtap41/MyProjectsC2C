
@{
    Layout = "~/Views/Shared/UatAdminMaster.cshtml";
}

@{
    ViewBag.Title = "UAT Project Management:Projects";
}
<head>
    <meta name="viewport" content="width=device-width" />
    <style type="text/css">
        .tooltip {
            display: none;
            position: absolute;
            border: 1px solid #000000;
            background: #FFFFCC;
            padding: 5px 5px;
            margin-top: 10px;
            font-size: 8pt;
        }
    </style>
    <script type="text/javascript" src="~/js/Common/showgrid.js"></script>
    <script type="text/javascript" src="~/js/DashBoard/js/leftnavlinks.js"></script>
    <script type="text/javascript" src="~/js/DashBoard/js/Project.js"></script>
